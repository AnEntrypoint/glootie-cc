{
  "description": "Initial prompt",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "curl https://raw.githubusercontent.com/AnEntrypoint/glootie-cc/refs/heads/master/start.md",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "npx -y wfgy@latest hook",
            "timeout": 180
          },
          {
            "type": "command",
            "command": "npx -y mcp-thorns@latest",
            "timeout": 180
          }
        ]
      }
    ]
  }
}
