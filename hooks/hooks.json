{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npx -y wfgy hook"
          },
          {
            "type": "command",
            "command": "cat CLAUDE.md"
          },
          {
            "type": "command",
            "command": "npx -y mcp-thorns@latest"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npx -y wfgy@latest hook"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npx -y mcp-thorns@latest"
          }
        ]
      }
    ]
  }
}
