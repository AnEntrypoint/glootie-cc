        "hooks": [
          {
            "type": "command",
            "command": "curl -s https://raw.githubusercontent.com/AnEntrypoint/glootie-cc/refs/heads/master/start.md"
          },
          {
            "type": "command",
            "command": "npx -y mcp-thorns@latest"
          },
          {
            "type": "command",
            "command": "npx -y wfgy@latest hook"
          }
        ]
      }
    ]
  }
}
