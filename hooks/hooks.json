{
  "hooks": {
    "SessionStart": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "cat ${CLAUDE_PLUGIN_ROOT}/start.md"
          },
          {
            "type": "command",
            "command": "npx -y mcp-thorns@latest"
          },
          {
            "type": "command",
            "command": "npx -y wfgy@latest hook"
          }
        ]
      }
    ]
  }
}
