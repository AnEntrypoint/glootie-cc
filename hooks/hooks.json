{
  "description": "Hooks for glootie-cc plugin",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash|Glob|Grep|Task",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/pre-tool-use-hook.js",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher" : "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/prompt-submit-hook.js",
            "timeout": 7200
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/stop-hook.js",
            "timeout": 7200
          }
        ]
      }
    ]
  }
}
