{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npx -y wfgy hook && cat CLAUDE.md && npx -y mcp-thorns@latest && cat ${CLAUDE_PLUGIN_ROOT}/context/work-guidelines.md"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npx -y wfgy@latest hook && cat ${CLAUDE_PLUGIN_ROOT}/context/cleanup-guidelines.md"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npx -y mcp-thorns@latest"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": ["Write", "Edit"],
        "hooks": [
          {
            "type": "command",
            "command": "echo \"ðŸ”§ Preparing to modify codebase...\""
          }
        ]
      },
      {
        "matcher": ["Bash"],
        "hooks": [
          {
            "type": "command",
            "command": "echo \"ðŸ’» Executing shell command...\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ["Write", "Edit"],
        "hooks": [
          {
            "type": "command",
            "command": "echo \"âœ… Code modification complete\""
          }
        ]
      },
      {
        "matcher": ["Bash"],
        "hooks": [
          {
            "type": "command",
            "command": "echo \"âœ… Shell command executed\""
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"ðŸ‘‹ Session ended - WFGY context saved\""
          }
        ]
      }
    ]
  }
}
